<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".GyeonggiTourFragment"
        android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GyeonggiFoodFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_gyeonggi_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"/>

    <LinearLayout
        android:id="@+id/gt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img5"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포천 파머스키친"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_medium"
            android:letterSpacing="-0.06"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경기 포천시"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_medium"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img6"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비둘기낭99"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_medium"
            android:letterSpacing="-0.06"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경기 포천시"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_medium"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gt8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img8"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:src="@drawable/mildang"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안성밀당"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_medium"
            android:letterSpacing="-0.06"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경기 안성시"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_medium"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gt16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img16"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:src="@drawable/localfood_pochun"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포천 로컬푸드마켓"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_medium"
            android:letterSpacing="-0.06"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경기 포천시"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_medium"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>
    </LinearLayout>


</LinearLayout>

        <FrameLayout
            android:id="@+id/gf_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/gfImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/gfTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="테스트"
                        android:textSize="22dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosanskr_medium"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.06"
                        android:layout_marginLeft="20dp"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share"
                        android:layout_marginEnd="25dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/gfAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanskr_medium"
                    android:drawablePadding="8.8dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginBottom="10dp"
                    android:includeFontPadding="false"
                    app:drawableLeftCompat="@drawable/ic_location" />

                <TextView
                    android:id="@+id/gfTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연락처"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanskr_medium"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginBottom="10dp"
                    android:includeFontPadding="false"
                    app:drawableLeftCompat="@drawable/ic_phone" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</ScrollView>